{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title":"Top 15 Winter Athletes of all time",
    "width":"container",
    "height":400,
    "data": {
      "url": "https://raw.githubusercontent.com/mintdaniel6/olympic/main/winter.csv"
    },
    "transform": [
      {
        "aggregate": [
          {"op":"count","as":"TotalMedals"}
        ],
        "groupby": ["Athlete","Country"]
      },
      {
        "window": [{"op":"rank","as":"rank"}],
        "sort": [{"field":"TotalMedals","order":"descending"}]
      },
      {
        "filter":"datum.rank <= 10"
      },
      {
        "lookup": "Country",
        "from":{
          "data":{
            "url":"https://raw.githubusercontent.com/mintdaniel6/olympic/main/dictionary.csv"
            },
            "key": "Code",
            "fields": ["Country"]
          }
        } 
    ],
    "mark": "bar",
    "encoding": {
      "x": {
        "field": "Athlete",
        "type": "nominal",
        "title": "Athlete"
      },
      "y": {
        "field": "TotalMedals",
        "type": "quantitative",
        "title":"Total Medals"
      },
      "color": {
        "field": "Country",
        "type": "nominal",
        "scale": {
          "domain": ["United States of America", "Germany","East Germany","Norway","Italy","Soviet Union","Sweden"]
        }
      },
      "tooltip": [
        { "field": "Country", "type": "nominal", "title": "Country" },
        { "field": "TotalMedals", "type": "quantitative", "title": "Total Medals" }
      ]
  
    }
  }
