{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {"text":"Medal distribution of top 10 countries","fontSize":20},
    "width": "container",
    "height": 500,
    "data": {
      "url": "https://raw.githubusercontent.com/mintdaniel6/olympic/main/olympics_medals_country_wise.csv"
    },
    "transform": [
      
      {
        "aggregate": [
          { "op": "sum", "field": "total_gold", "as": "Gold" },
          { "op": "sum", "field": "total_silver", "as": "Silver" },
          { "op": "sum", "field": "total_bronze", "as": "Bronze" }
        ],
        "groupby": ["Country"]
      },
      {
        "calculate": "datum.Gold + datum.Silver + datum.Bronze",
        "as": "total_total"
      },
      {
        "window": [{ "op": "rank", "as": "rank" }],
        "sort": [{ "field": "total_total", "order": "descending" }]
      },
      {
        "filter": { "field": "rank", "lte": 10 }
      },
      {
        "fold": ["Gold","Silver","Bronze"],"as": ["medal_type","medal_count"]
      }
      
    ],
    "mark": "bar",
    "encoding": {
      "x": { "field": "Country", "type": "ordinal" },
      "y": { "field": "medal_count", "type": "quantitative","title":"Total Medals" },
      "color": {
        "field": "medal_type",
        "type": "nominal",
        "scale": {"domain":["Gold","Silver","Bronze"], "range": [ "Gold","Silver", "#CD7F32"]},
        "title":"Medal type"
      },
      "tooltip": [
        { "field": "Country", "type": "nominal", "title": "Country" },
        { "field": "total_total", "type": "quantitative", "title": "Total Medals" },
        { "field": "Gold", "type": "quantitative", "title": "Gold Medals" },
        { "field": "Silver", "type": "quantitative", "title": "Silver Medals" },
        { "field": "Bronze", "type": "quantitative", "title": "Bronze Medals" }
      ]
    }
  }
